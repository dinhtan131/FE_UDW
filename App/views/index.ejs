<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Threads Clone</title>
    <!-- Bootstrap CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icons CDN -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.8.1/font/bootstrap-icons.min.css" rel="stylesheet">

    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <nav class="sidebar d-none d-md-block bg-light">
                <!-- Logo ở phần trên cùng -->
                <div class="logo mb-4">
                    <img src="icons/logo.svg" alt="Threads Logo" class="img-fluid">
                </div>
            
                <!-- Wrapper cho các icon để căn giữa dọc -->
                <div class="sidebar-icons d-flex flex-column align-items-center justify-content-between flex-grow-1">
                    <div class="nav flex-column">
                        <div class="nav-item mb-3">
                            <div class="nav-link" href="#">
                                <img src="icons/home.svg" alt="Home Icon">
                            </div>
                        </div>
                        <div class="nav-item mb-3">
                            <div class="nav-link" href="#">
                                <img src="icons/search.svg" alt="Home Icon">
                        </div>
                        <div class="nav-item mb-3">
                            <div class="nav-link" href="#">
                              <img src="icons/plus.svg" class="plus-button" alt="Home Icon">
                            </div>
                        </div>
                        <div class="nav-item mb-3">
                            <div class="nav-link" href="#">
                               <img src="icons/heart.svg" alt="Home Icon">
                            </div>
                        </div>
                        <div class="nav-item mb-3">
                            <div class="nav-link" href="#">
                                <img src="icons/profile.svg" alt="Home Icon">
                            </div>
                        </div>
                    </div>
                    
                    <div class="nav-item mb-3">
                        <div class="nav-link" href="#">
                            <img src="icons/pin.svg" alt="Home Icon">
                        </div>
                        <div class="nav-link" href="#">
                            <img src="icons/menu.svg" alt="Home Icon">
                        </div>
                    </div>
                </div>
            </nav>
            
            
    
            
    <!-- Main Content -->
    <!-- Main Content -->
<main role="main" class="col-md-10 ml-sm-auto col-lg-10 px-4">
    <!-- Navbar -->
    <nav class="navbar navbar-light bg-white border-bottom mb-3">
        <span class="navbar-brand mb-0 h4">For you</span>
        <button class="btn btn-outline-secondary">Post</button>
    </nav>

    <!-- Post Feed -->
    <div class="post-feed mt-4">
        <% posts.forEach(post => { %>
            <div class="card mb-3">
                <div class="card-body">
                    <div class="d-flex align-items-center mb-2">
                        <div class="avatar">
                            <i class="bi bi-person-circle" style="font-size: 2rem;"></i>
                        </div>
                        <div class="ml-2">
                            <h5 class="card-title mb-0"><%= post.username %></h5>
                            <small class="text-muted">3h ago</small>
                        </div>
                    </div>
                    <p class="card-text"><%= post.content %></p>
                    <div class="d-flex justify-content-between">
                        <div>
                            <i class="bi bi-heart mr-2"></i><span>7</span>
                            <i class="bi bi-chat mr-2"></i><span>3</span>
                            <i class="bi bi-share"></i>
                        </div>
                        <i class="bi bi-three-dots"></i>
                    </div>
                </div>
            </div>
        <% }); %>
    </div>
    <!-- Popup Modal -->
    <div id="postModal" class="modal-overlay d-none">
        <div class="modal-content">
            <span class="close-btn">&times;</span>
            <!-- Nội dung của popup, hiện đang để trống -->
            <h2>Create a New Post</h2>
            <p>This is a blank popup. Add your content here.</p>
        </div>
    </div>

</main>

    <script src="/js/main.js"></script>

    <!-- Content will go here -->
</body>
</html>
