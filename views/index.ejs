<!DOCTYPE html>
<html lang="en">
    <%- include('partials/header') %>

<body>
    <!-- Sidebar -->
    <%- include('partials/sidebar') %>  
    <%- include('partials/bottom_bar') %>
    <div class="content-wrapper">
        
    </div>
    
    <main class="main-container">
        <%- include('partials/navbar', { 
            showDropdown: true, 
            navbarTitle: "For you", 
            dropdownOptions: [
                { href: "#", label: "Follow", active: false },
            ] 
        }) %>
        <div class="content-container">
            <img src="/icons/profile.svg" alt="Avatar" class="rounded-circle" style="width: 40px; height: 40px; margin-right: 10px;"> 
            <p class="plus-button" style ="opacity: 0.5;">What's new</p>
            <button class="btn btn-outline-secondary ml-auto plus-button" data-toggle="modal" data-target="#postModal">Post</button>
        </div>

        <div class="post-feed">
            <% posts.forEach(post => { %>
                <div class="card mb-3" data-post-id="<%= post._id %>">
                    <div class="card-body">
                        <div class="card-info d-flex align-items-center mb-2" data-post-id="<%= post._id %>">
                            <!-- Hiển thị ảnh đại diện người dùng -->
                            <a class="avatar" href="/profile/<%= post.author._id %>">
                                <img src="<%='/icons/profile.svg' %>" alt="Profile Icon" class="rounded-circle" style="width: 40px; height: 40px;">    
                            </a>
                            <a class="ml-2">
                                <!-- Hiển thị tên người dùng -->
                                <h5 class="card-title mb-0" style="color: #333;"><%= post.author.username %></h5>
                                <!-- Hiển thị thời gian đăng -->
                                <small class="text-muted"><%= new Date(post.createdAt).toLocaleString() %></small>
                            </a>
                        </div>

                        <!-- Hiển thị nội dung bài viết -->
                        <p class="card-text card-info" data-post-id="<%= post._id %>"> <%= post.content %> </p>


                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <!-- Like Button -->
                                <button class="btn btn-link like-button <%= post.likes.some(user => user._id.toString() === currentUserId) ? 'liked' : '' %>">
                                    <i class="bi bi-heart <%= post.likes.some(user => user._id.toString() === currentUserId) ? 'text-danger' : '' %>"></i>
                                    <span class="like-count"><%= post.likes.length %></span>
                                </button>
                                <!-- Comment Button -->
                                <button class="btn btn-link comment-button" data-toggle="modal" data-target="#commentModal" data-post-id="<%= post._id %>">
                                    <i class="bi bi-chat"></i>
                                    <span class="comment-count"><%= post.comments.length %></span>
                                  </button>
                                  
                                <!-- Share Button -->
                                <button class="btn btn-link">
                                    <i class="bi bi-share"></i>
                                </button>
                            </div>
                            <button class="btn btn-link more-options">
                                <i class="bi bi-three-dots"></i>
                            </button>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
    </main>
    <!-- Modal -->
    <%- include('partials/modal', {
        modalId: 'postModal',
        modalTitle: 'New Threads',
        modalBody: '<p>Đây là nội dung của modal popup.</p>'
    }) %>
    <%- include('partials/commentModal') %>

    <!-- JavaScript files -->
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@1.16.1/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="/js/main.js"></script>
    <script src="/js/sidebar_bottombar.js"></script>
</body>
</html>
