<!-- commentModal.ejs -->
<div class="modal fade" id="commentModal" tabindex="-1" role="dialog" aria-labelledby="commentModalTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 id="commentModalTitle" class="modal-title">Reply</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
  
        <div class="modal-body">

          <div class="original-comment mb-3"></div>

          <form class="reply-form">
            <div class="form-group">
              <textarea class="form-control reply-input" placeholder="Reply to this comment..." rows="3"></textarea>
            </div>
            <button type="submit" class="btn btn-primary">Post</button>
          </form>
  
        </div>
      </div>
    </div>
  </div>
  