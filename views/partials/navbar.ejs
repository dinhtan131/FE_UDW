<nav class="navbar navbar-light mb-3 px-3">
    <div class="w-100 text-center position-relative">
        <!-- Kiểm tra xem có sử dụng dropdown không -->
        <% if (showDropdown) { %>
            <span class="navbar-brand mb-0 h4 nav-link dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">
                <%= navbarTitle || "Activity" %>
            </span>
            <div class="dropdown-menu dropdown-menu-center">
                <% (dropdownOptions || []).forEach(option => { %>
                    <a class="dropdown-item <%= option.active ? 'active' : '' %>" href="<%= option.href %>"><%= option.label %></a>
                <% }); %>
            </div>
        <% } else { %>
            <!-- Nếu không có dropdown, hiển thị tiêu đề đơn giản -->
            <span class="navbar-brand mb-0 h4"><%= navbarTitle || "Default Title" %></span>
        <% } %>
    </div>
</nav>
