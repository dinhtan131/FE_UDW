<div class="custom-modal d-none" id="followModal">
    <div class="modal-dialog">
        <div class="modal-content p-4">
            <!-- Header với các tab -->
            <div class="modal-header border-0 d-flex justify-content-center position-relative">
                <button type="button" class="btn-close position-absolute" style="right: 15px; top: 15px;" onclick="closeModal()">x</button>
                <ul class="nav nav-tabs border-bottom-0" id="followTabs">
                    <li class="nav-item">
                        <a class="nav-link active" href="#" onclick="showFollowers()">Followers <span id="followerCount">0</span></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="#" onclick="showFollowing()">Following <span id="followingCount">0</span></a>
                    </li>
                </ul>
            </div>

            <!-- Nội dung modal -->
            <div class="modal-body text-center">
                <p id="noFollowersText">mesol.7 doesn't have any followers yet.</p>
            </div>
        </div>
    </div>
</div>



<script>
    // Hàm để mở modal
function openModal() {
    document.getElementById('followModal').classList.remove('d-none');
}

// Hàm để đóng modal
function closeModal() {
    document.getElementById('followModal').classList.add('d-none');
}

// Hàm hiển thị Followers
function showFollowers() {
    document.getElementById('noFollowersText').textContent = "mesol.7 doesn't have any followers yet.";
    document.getElementById('followerCount').textContent = "0"; // Số lượng followers có thể thay đổi
}

// Hàm hiển thị Following
function showFollowing() {
    document.getElementById('followModal').classList.remove('active');
    document.getElementById('noFollowersText').textContent = "mesol.7 isn't following anyone yet.";
    document.getElementById('followingCount').textContent = "0"; // Số lượng following có thể thay đổi
}

</script>
