<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Threads Clone</title>
    <!-- Bootstrap CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icons CDN -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.8.1/font/bootstrap-icons.min.css" rel="stylesheet">

    <link href="css/style.css" rel="stylesheet">
    <link href="css/modal.css" rel="stylesheet">
    <link href="css/navbar_sidebar.css" rel="stylesheet">
    <link href="css/responsive.css" rel="stylesheet">
</head>

<body>
    <!-- Sidebar -->
    <%- include('partials/sidebar') %>
    <%- include('partials/bottom_bar') %>

    <div class="content-wrapper">
    </div>
    
    <main class="main-container">
        <%- include('partials/navbar', { showDropdown: false, navbarTitle: "Search" }) %>
        <!-- <div class="content-container">
            <img src="icons/profile.svg" alt="Avatar" class="rounded-circle" style="width: 40px; height: 40px; margin-right: 10px;"> 
            <p class="plus-button" style ="opacity: 0.5;">What's new</p>
            <button class="btn btn-outline-secondary ml-auto plus-button">Post</button>
        </div> -->

        <div class="post-feed">
            <div class="post-feed">
                <!-- Ô tìm kiếm -->
                <div class="search-bar mb-3 p-2">
                    <input type="text" class="form-control bg-dark text-light" placeholder="Search" style="border: 1px solid #e2dcdc; border-radius: 10px; padding: 10px;">
                </div>
            
                <!-- Tiêu đề gợi ý tài khoản -->
                <h6 class="px-2">Follow suggestions</h6>
            
                <!-- Danh sách gợi ý tài khoản -->
                <div class="suggestion-list">
                    <!-- Mẫu tài khoản -->
                    <% followList.forEach(user => { %>
                    <div class="card mb-3 " style="background-color: #ffffff !important;">
                        <div class="card-body d-flex justify-content-between align-items-center">
                            <div class="d-flex align-items-center">
                                <img src="icons/profile.svg" alt="Avatar" class="rounded-circle mr-3" style="width: 40px; height: 40px;">
                                <div>
                                    <h6 class="mb-1" style="color: #000000"><%= user.userIDName %></h6>
                                    <small  style="color: #000000"><%= user.UserName %></small><br>
                                    <small  style="color: #000000"><%= user.numUserFolower %> Follower</small>
                                </div>
                            </div>
                            <button class="btn btn-outline-light btn-sm" style="color: #000000; border: 2px solid #e2dcdc;" >Follow</button>
                        </div>
                    </div>
                    <% }); %>
            
                    <!-- Tạo thêm các tài khoản mẫu khác theo nhu cầu -->
                </div>
            </div>
            
        </div>
    </main>
    <%- include('partials/modal', {
        modalId: 'postModal',
        modalTitle: 'New Threads',
        modalBody: '<p>Đây là nội dung của modal popup.</p>'
    }) %>
    <script src="/js/main.js"></script>
    <script src="/js/sidebar_bottombar.js"></script>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@1.16.1/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
