<!DOCTYPE html>
<html lang="en">
    <%- include('partials/header') %>

<body>
    <!-- Sidebar -->
    <%- include('partials/sidebar') %>
    <%- include('partials/bottom_bar') %>

    <div class="content-wrapper">
    </div>
    
    <main class="main-container">
        <%- include('partials/navbar', { showDropdown: false, navbarTitle: "Search" }) %>


        <div class="post-feed">
            <div class="post-feed">
 
                <div class="search-bar mb-3 p-2">
                    <input type="text" class="form-control bg-dark text-light" placeholder="Search" style="border: 1px solid #e2dcdc; border-radius: 10px; padding: 10px;">
                </div>
            
                <h6 class="px-2">Follow suggestions</h6>
           
                <!-- Danh sách gợi ý tài khoản -->
                <div class="suggestion-list">
                    <% followList.forEach(user => { %>
                        <div class="card mb-3 " style="background-color: #ffffff !important;">
                            <div class="card-body d-flex justify-content-between align-items-center" data-user-id="<%= user._id %>">
                                <div class="d-flex align-items-center">
                                    <img src="<%='/icons/profile.svg' %>" alt="Avatar" class="rounded-circle mr-3" style="width: 40px; height: 40px;">
                                    <div>
                                        <h6 class="mb-1" style="color: #000000"><%= user.username %></h6>
                                        <small style="color: #000000"><%= user.email %></small><br>
                                        <small style="color: #000000">
                                            <% if (user.followers && user.followers.length > 0) { %>
                                                <%= user.followers.length %> Follower(s)
                                            <% } else { %>
                                                No Followers
                                            <% } %>
                                        </small>
                                    </div>
                                    </div>
                                </div>
                                <button class="btn btn-outline-light btn-sm follow-button" style="color: #000000; border: 2px solid #e2dcdc;"data-user-id="<%= user._id %>">
                                    Follow
                                </button>
                            </div>
                        </div>
                    <% }); %>
                </div>
                
            </div>
            
        </div>
    </main>

    <%- include('partials/modal', {
        modalId: 'postModal',
        modalTitle: 'New Threads',
        modalBody: '<p>Đây là nội dung của modal popup.</p>'
    }) %>

    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@1.16.1/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="/js/main.js"></script>
    <script src="/js/sidebar_bottombar.js"></script>
</body>
</html>
